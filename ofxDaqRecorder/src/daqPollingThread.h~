#ifndef DAQPOLLINGTHREAD
#define DAQPOLLINGTHREAD

#include <libusb.h>
#include "ofMain.h"
#include "DAQFlex_libusb/databuffer.h"

class daqPollingThread : public ofThread {
   public:
        daqPollingThread(libusb_device_handle* dev_handle, 
            unsigned char endpoint_in, 
            unsigned int sampleRate,
            unsigned int timeout,
            unsigned int bulkTxLength,
            dataBuffer* buffer);
        void threadedFunction();
   private:
        libusb_device_handle* dev_handle;
        unsigned char endpoint_in;
        unsigned int sampleRate;
        unsigned int timeout;
        unsigned int bulkTxLength;
        dataBuffer* buffer;
};
#endif
